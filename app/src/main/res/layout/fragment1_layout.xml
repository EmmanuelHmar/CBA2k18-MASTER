    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="548dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="19dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="4dp">
            <TextView
                android:id="@+id/info_text"
                android:text="Dinner - Atlanta Chin Baptist Church"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:padding="10dp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/time1"
                android:text="05:00PM - 07:00PM /Building C(Ground Foor)"
                android:textSize="14sp"
                android:layout_marginTop="50dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />
            <Button
                android:id="@+id/Fri_Dinner"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="105dp"
                android:text="DETAILS"
                android:padding="5dp"
                android:backgroundTint="@color/lightblue"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_bookmark_border_white_24dp"
                android:tint="@color/lightblue" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="4dp">
            <TextView
                android:id="@+id/info_text2"
                android:layout_marginTop="10dp"
                android:text="Night Service - Infinite Energy Forum"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/time2"
                android:text="08:00PM - 011:00PM /Grand Ballroom"
                android:textSize="14sp"
                android:layout_marginTop="50dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

            <Button
                android:id="@+id/Fri_Evening"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="105dp"
                android:backgroundTint="@color/lightblue"
                android:padding="5dp"
                android:text="DETAILS" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_bookmark_border_white_24dp"
                android:tint="@color/lightblue" />
        </android.support.v7.widget.CardView>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
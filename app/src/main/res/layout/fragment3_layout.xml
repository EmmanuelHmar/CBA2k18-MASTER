<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="Welcome to the Bulletin Page! Please select your AM or PM service to view more detail schedule"
        android:layout_marginTop="5dp"
        android:id="@+id/textTab3"
        android:layout_below="@+id/DayService"/>

    <Button
        android:id="@+id/DayService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="Day Service" />


</RelativeLayout>